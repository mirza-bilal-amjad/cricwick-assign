    <Spinner
        android:id="@+id/spinner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/letUsKnowText"
        app:layout_constraintTop_toBottomOf="@+id/enjoyText"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/enjoyText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/opensans_regular"
        android:text="You Can Still Enjoy"
        android:textColor="#C12026"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="@id/letUsKnowText"
        app:layout_constraintTop_toBottomOf="@+id/letUsKnowText" />

    <ImageView
        android:id="@+id/freeLiveTick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/unsub_tick"
        android:layout_marginTop="15dp"
        app:layout_constraintLeft_toLeftOf="@id/spinner"
        app:layout_constraintTop_toBottomOf="@+id/spinner" />

    <TextView
        android:id="@+id/freeLiveText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="17dp"
        android:fontFamily="@font/opensans_bold_0"
        android:includeFontPadding="false"
        android:text="Free Live Scores"
        android:textColor="#404040"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/freeLiveTick"
        app:layout_constraintLeft_toRightOf="@id/freeLiveTick"
        app:layout_constraintTop_toTopOf="@id/freeLiveTick" />

    <ImageView
        android:id="@+id/freeStatsTick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:src="@drawable/unsub_tick"
        app:layout_constraintLeft_toLeftOf="@id/letUsKnowText"
        app:layout_constraintTop_toBottomOf="@id/freeLiveTick" />

    <TextView
        android:id="@+id/freeStatsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="17dp"
        android:fontFamily="@font/opensans_bold_0"
        android:includeFontPadding="false"
        android:text="Free Cricket Stats"
        android:textColor="#404040"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/freeStatsTick"
        app:layout_constraintLeft_toRightOf="@id/freeStatsTick"
        app:layout_constraintTop_toTopOf="@id/freeStatsTick" />


    <TextView
        android:id="@+id/unsubscribe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/unsub_btn"
        android:fontFamily="@font/roboto_regular"
        android:gravity="center"
        android:text="Unregister"
        android:textColor="@color/White"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/freeStatsText" />

    <TextView
        android:id="@+id/notNow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_regular"
        android:gravity="center"
        android:padding="15dp"
        android:text="Not Now"
        android:textColor="#BF404040"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/unsubscribe" />

</androidx.constraintlayout.widget.ConstraintLayout>
