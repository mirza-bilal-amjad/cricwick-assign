<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/preview_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/inning1LinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:gravity="bottom"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/team1Name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_regular"
                    android:gravity="center|left"
                    android:singleLine="false"
                    android:text="-"
                    android:maxLines="1"
                    android:lines="1"
                    android:textAllCaps="true"
                    android:textColor="@android:color/black"
                    android:textSize="23sp"
                    tools:ignore="HardcodedText" />

                <ImageView
                    android:id="@+id/team1Falg"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="3dp"
                    android:layout_marginTop="2dp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-6dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="3dp">


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="-3dp"
                    android:layout_marginRight="-3dp"
                    android:layout_weight="1"
                    android:alpha="0.4"
                    android:background="@color/Gray"
                    android:visibility="visible" />


            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginTop="-4dp"
                android:gravity="top">

                <LinearLayout
                    android:id="@+id/team1inning1LinearLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/team1inning1ScoreWithWickets"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-4dp"
                        android:fontFamily="@font/roboto_regular"
                        android:padding="3dp"
                        android:singleLine="true"
                        android:text="-"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"

                        tools:ignore="HardcodedText" />

                    <TextView
                        android:id="@+id/team1inning1Overs"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-5dp"
                        android:fontFamily="@font/roboto_regular"
                        android:padding="3dp"
                        android:singleLine="true"
                        android:text="-"
                        android:textColor="@android:color/black"
                        android:textSize="12sp"
                        tools:ignore="HardcodedText" />
                </LinearLayout>

                <TextView
                    android:id="@+id/team1and"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/roboto_regular"
                    android:text="&amp;"
                    android:visibility="invisible"

                    android:textColor="@android:color/black" />

                <LinearLayout
                    android:id="@+id/team1inning2LinearLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/team1inning2ScoreWithWickets"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-4dp"
                        android:fontFamily="@font/roboto_regular"
                        android:padding="3dp"
                        android:singleLine="true"
                        android:text="-"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:id="@+id/team1inning2Overs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-5dp"
                        android:fontFamily="@font/roboto_regular"
                        android:padding="3dp"
                        android:singleLine="true"
                        android:text="-"
                        android:textColor="@android:color/black"
                        android:textSize="12sp"
                        tools:ignore="HardcodedText" />
                </LinearLayout>


            </RelativeLayout>

        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="1dp"
            android:layout_marginTop="-2dp"
            android:src="@drawable/verses_icon_grey" />

        <LinearLayout
            android:id="@+id/inning2LinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="3dp"
                android:gravity="bottom"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/team2Falg"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="3dp"
                    android:layout_marginTop="2dp" />

                <TextView
                    android:id="@+id/team2Name"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_regular"
                    android:gravity="right"
                    android:singleLine="true"
                    android:text="-"
                    android:maxLines="1"
                    android:lines="1"
                    android:textAllCaps="false"
                    android:textColor="@android:color/black"
                    android:textSize="23sp"
                    tools:ignore="HardcodedText" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-6dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="3dp"
                android:paddingLeft="0dp"
                android:paddingRight="3dp"
                android:paddingTop="3dp"

                >

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="-3dp"
                    android:layout_marginRight="-3dp"
                    android:layout_weight="1"
                    android:alpha="0.4"
                    android:background="@color/Gray"
                    android:visibility="visible" />

            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginTop="-4dp"
                android:gravity="top">

                <LinearLayout
                    android:id="@+id/team2inning1LinearLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/team2inning1ScoreWithWickets"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-4dp"
                        android:fontFamily="@font/roboto_regular"
                        android:padding="3dp"
                        android:singleLine="true"
                        android:text="-"

                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:id="@+id/team2inning1Overs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-5dp"
                        android:fontFamily="@font/roboto_regular"
                        android:padding="3dp"

                        android:singleLine="true"
                        android:text="-"
                        android:textColor="@android:color/black"
                        android:textSize="12sp"
                        tools:ignore="HardcodedText" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/roboto_regular"
                    android:text="&amp;"
                    android:id="@+id/team2and"
                    android:visibility="invisible"
                    android:textColor="@android:color/black" />

                <LinearLayout
                    android:id="@+id/team2inning2LinearLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/team2inning2ScoreWithWickets"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-4dp"
                        android:fontFamily="@font/roboto_regular"
                        android:padding="3dp"
                        android:singleLine="true"

                        android:text="-"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:id="@+id/team2inning2Overs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-5dp"
                        android:fontFamily="@font/roboto_regular"
                        android:padding="3dp"
                        android:singleLine="true"

                        android:text="-"
                        android:textColor="@android:color/black"
                        android:textSize="12sp"
                        tools:ignore="HardcodedText" />
                </LinearLayout>


            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>